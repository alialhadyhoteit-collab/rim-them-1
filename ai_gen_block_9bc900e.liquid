{% doc %}
  @prompt
    Announcement bar sliding with full edit 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-announcement-bar-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    overflow: hidden;
    position: relative;
    width: 100%;
    padding: {{ block.settings.vertical_padding }}px 0;
  }

  .ai-announcement-bar-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }

  .ai-announcement-bar-track-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    white-space: nowrap;
    will-change: transform;
  }

  .ai-announcement-bar-item-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    padding: 0 {{ block.settings.item_spacing }}px;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-transform: {{ block.settings.text_transform }};
  }

  .ai-announcement-bar-item-{{ ai_gen_id }} a {
    color: {{ block.settings.text_color }};
    text-decoration: none;
  }

  .ai-announcement-bar-item-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.text_hover_color }};
  }

  .ai-announcement-bar-separator-{{ ai_gen_id }} {
    display: inline-block;
    margin: 0 {{ block.settings.separator_spacing }}px;
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.separator_size }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-announcement-bar-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<announcement-bar-{{ ai_gen_id }}
  class="ai-announcement-bar-{{ ai_gen_id }}"
  data-speed="{{ block.settings.scroll_speed }}"
  data-direction="{{ block.settings.scroll_direction }}"
  data-pause-on-hover="{{ block.settings.pause_on_hover }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-announcement-bar-wrapper-{{ ai_gen_id }}">
    <div class="ai-announcement-bar-track-{{ ai_gen_id }}">
      {% for i in (1..block.settings.repeat_count) %}
        {% if block.settings.message_1 != blank %}
          <div class="ai-announcement-bar-item-{{ ai_gen_id }}">
            {% if block.settings.link_1 != blank %}
              <a href="{{ block.settings.link_1 }}">{{ block.settings.message_1 }}</a>
            {% else %}
              {{ block.settings.message_1 }}
            {% endif %}
          </div>
          {% if block.settings.show_separator %}
            <span class="ai-announcement-bar-separator-{{ ai_gen_id }}">{{ block.settings.separator_symbol }}</span>
          {% endif %}
        {% endif %}

        {% if block.settings.message_2 != blank %}
          <div class="ai-announcement-bar-item-{{ ai_gen_id }}">
            {% if block.settings.link_2 != blank %}
              <a href="{{ block.settings.link_2 }}">{{ block.settings.message_2 }}</a>
            {% else %}
              {{ block.settings.message_2 }}
            {% endif %}
          </div>
          {% if block.settings.show_separator %}
            <span class="ai-announcement-bar-separator-{{ ai_gen_id }}">{{ block.settings.separator_symbol }}</span>
          {% endif %}
        {% endif %}

        {% if block.settings.message_3 != blank %}
          <div class="ai-announcement-bar-item-{{ ai_gen_id }}">
            {% if block.settings.link_3 != blank %}
              <a href="{{ block.settings.link_3 }}">{{ block.settings.message_3 }}</a>
            {% else %}
              {{ block.settings.message_3 }}
            {% endif %}
          </div>
          {% if block.settings.show_separator %}
            <span class="ai-announcement-bar-separator-{{ ai_gen_id }}">{{ block.settings.separator_symbol }}</span>
          {% endif %}
        {% endif %}

        {% if block.settings.message_4 != blank %}
          <div class="ai-announcement-bar-item-{{ ai_gen_id }}">
            {% if block.settings.link_4 != blank %}
              <a href="{{ block.settings.link_4 }}">{{ block.settings.message_4 }}</a>
            {% else %}
              {{ block.settings.message_4 }}
            {% endif %}
          </div>
          {% if block.settings.show_separator %}
            <span class="ai-announcement-bar-separator-{{ ai_gen_id }}">{{ block.settings.separator_symbol }}</span>
          {% endif %}
        {% endif %}

        {% if block.settings.message_5 != blank %}
          <div class="ai-announcement-bar-item-{{ ai_gen_id }}">
            {% if block.settings.link_5 != blank %}
              <a href="{{ block.settings.link_5 }}">{{ block.settings.message_5 }}</a>
            {% else %}
              {{ block.settings.message_5 }}
            {% endif %}
          </div>
          {% if block.settings.show_separator and i < block.settings.repeat_count %}
            <span class="ai-announcement-bar-separator-{{ ai_gen_id }}">{{ block.settings.separator_symbol }}</span>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</announcement-bar-{{ ai_gen_id }}>

<script>
  (function() {
    class AnnouncementBar{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('.ai-announcement-bar-track-{{ ai_gen_id }}');
        this.speed = parseFloat(this.dataset.speed) || 50;
        this.direction = this.dataset.direction || 'left';
        this.pauseOnHover = this.dataset.pauseOnHover === 'true';
        this.animationId = null;
        this.isPaused = false;
        this.position = 0;
      }

      connectedCallback() {
        this.cloneContent();
        this.startAnimation();
        
        if (this.pauseOnHover) {
          this.addEventListener('mouseenter', () => this.pause());
          this.addEventListener('mouseleave', () => this.resume());
        }
      }

      cloneContent() {
        const clone = this.track.cloneNode(true);
        this.track.parentElement.appendChild(clone);
      }

      startAnimation() {
        const animate = () => {
          if (!this.isPaused) {
            if (this.direction === 'left') {
              this.position -= this.speed / 60;
            } else {
              this.position += this.speed / 60;
            }

            const trackWidth = this.track.offsetWidth;

            if (this.direction === 'left' && Math.abs(this.position) >= trackWidth) {
              this.position = 0;
            } else if (this.direction === 'right' && this.position >= trackWidth) {
              this.position = 0;
            }

            const tracks = this.querySelectorAll('.ai-announcement-bar-track-{{ ai_gen_id }}');
            tracks.forEach(track => {
              track.style.transform = `translateX(${this.position}px)`;
            });
          }

          this.animationId = requestAnimationFrame(animate);
        };

        this.animationId = requestAnimationFrame(animate);
      }

      pause() {
        this.isPaused = true;
      }

      resume() {
        this.isPaused = false;
      }

      disconnectedCallback() {
        if (this.animationId) {
          cancelAnimationFrame(this.animationId);
        }
      }
    }

    customElements.define('announcement-bar-{{ ai_gen_id }}', AnnouncementBar{{ ai_gen_id }});
  })();
</script>

