{% doc %}
  @prompt
    sliding up text full edit and the background tranparent 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slide-up-text-{{ ai_gen_id }} {
    position: relative;
    display: inline-block;
    overflow: hidden;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-slide-up-text__content-{{ ai_gen_id }} {
    display: block;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-align: {{ block.settings.text_alignment }};
    line-height: 1.4;
  }

  .ai-slide-up-text__word-{{ ai_gen_id }} {
    display: inline-block;
    overflow: hidden;
    vertical-align: bottom;
    margin-right: 0.3em;
  }

  .ai-slide-up-text__word-{{ ai_gen_id }}:last-child {
    margin-right: 0;
  }

  .ai-slide-up-text__inner-{{ ai_gen_id }} {
    display: inline-block;
    transform: translateY(100%);
    opacity: 0;
  }

  .ai-slide-up-text-{{ ai_gen_id }}.ai-animated .ai-slide-up-text__inner-{{ ai_gen_id }} {
    animation: ai-slide-up-{{ ai_gen_id }} {{ block.settings.animation_duration }}s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  @keyframes ai-slide-up-{{ ai_gen_id }} {
    0% {
      transform: translateY(100%);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  {% if block.settings.auto_play %}
    .ai-slide-up-text-{{ ai_gen_id }} .ai-slide-up-text__inner-{{ ai_gen_id }} {
      animation: ai-slide-up-{{ ai_gen_id }} {{ block.settings.animation_duration }}s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
    }
  {% endif %}
{% endstyle %}

<slide-up-text-{{ ai_gen_id }}
  class="ai-slide-up-text-{{ ai_gen_id }} {% if block.settings.auto_play %}ai-animated{% endif %}"
  data-stagger="{{ block.settings.stagger_delay }}"
  data-auto-play="{{ block.settings.auto_play }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-slide-up-text__content-{{ ai_gen_id }}">
    {% assign words = block.settings.text | split: ' ' %}
    {% for word in words %}
      <span class="ai-slide-up-text__word-{{ ai_gen_id }}">
        <span
          class="ai-slide-up-text__inner-{{ ai_gen_id }}"
          style="animation-delay: {{ forloop.index0 | times: block.settings.stagger_delay }}s;"
        >
          {{ word }}
        </span>
      </span>
    {% endfor %}
  </div>
</slide-up-text-{{ ai_gen_id }}>

<script>
  (function() {
    class SlideUpText{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.autoPlay = this.dataset.autoPlay === 'true';
      }

      connectedCallback() {
        if (!this.autoPlay) {
          this.setupIntersectionObserver();
        }
      }

      setupIntersectionObserver() {
        const options = {
          root: null,
          rootMargin: '0px',
          threshold: 0.2
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting && !this.classList.contains('ai-animated')) {
              this.classList.add('ai-animated');
              observer.unobserve(this);
            }
          });
        }, options);

        observer.observe(this);
      }
    }

    customElements.define('slide-up-text-{{ ai_gen_id }}', SlideUpText{{ ai_gen_id }});
  })();
</script>

