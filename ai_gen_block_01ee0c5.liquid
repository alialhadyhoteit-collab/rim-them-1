{% doc %}
  @prompt
    sliding up text with full edit   size layout appperenc transparent size     full edit locattion, background transparent 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-sliding-text-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    justify-content: {{ block.settings.horizontal_alignment }};
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-sliding-text-content-{{ ai_gen_id }} {
    opacity: 0;
    transform: translateY({{ block.settings.slide_distance }}px);
    animation: ai-slide-up-{{ ai_gen_id }} {{ block.settings.animation_duration }}s {{ block.settings.animation_easing }} forwards;
    animation-delay: {{ block.settings.animation_delay }}s;
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
  }

  .ai-sliding-text-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    line-height: {{ block.settings.heading_line_height }};
  }

  .ai-sliding-text-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0;
    line-height: {{ block.settings.subheading_line_height }};
  }

  @keyframes ai-slide-up-{{ ai_gen_id }} {
    0% {
      opacity: 0;
      transform: translateY({{ block.settings.slide_distance }}px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-sliding-text-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top_mobile }}px {{ block.settings.padding_horizontal_mobile }}px {{ block.settings.padding_bottom_mobile }}px;
      min-height: {{ block.settings.min_height_mobile }}px;
    }

    .ai-sliding-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-sliding-text-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_mobile }}px;
    }

    .ai-sliding-text-content-{{ ai_gen_id }} {
      max-width: 100%;
    }
  }
{% endstyle %}

<div class="ai-sliding-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-sliding-text-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-sliding-text-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}
    {% if block.settings.subheading != blank %}
      <div class="ai-sliding-text-subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}
  </div>
</div>

